@using SporsalonuBYSS.Models
@model List<User>
@{
    ViewBag.Title = "GetUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>GetUser</h2>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kullanıcılar Tablosu</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>KullanıcıID</th>
                        <th>Kullanıcı adı</th>
                        <th>Şifre</th>
                        <th>RoleID</th>
                        <th>E-Mail</th>
                        <th>Sil<th>


                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Kullanıcı ID</th>
                        <th>Kullanıcı adı</th>
                        <th>Şifre</th>
                        <th>RoleID</th>
                        <th>E-Mail</th>
                        <th>Sil
                        <th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (User list in Model)
                    {
                    <tr>
                        <td>@list.UserID</td>
                        <td>@list.Username</td>
                        <td>@list.Password</td>
                        <td>@list.EMail</td>
                        <td>@list.RoleID</td>
                        <td>  
                            <a href="/AdminpUser/RemoveUser/@list.UserID" class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
