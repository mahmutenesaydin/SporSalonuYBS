    <!-- Icon css link -->
    <link href="~/Content/UserContent/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/UserContent/~/Content/UserContent/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/UserContent/vendors/line-icon/css/simple-line-icons.css" rel="stylesheet">
    <link href="~/Content/UserContent/vendors/elegant-icon/style.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="~/Content/UserContent/css/bootstrap.min.css" rel="stylesheet">

    <!-- Rev slider css -->
    <link href="~/Content/UserContent/vendors/revolution/css/settings.css" rel="stylesheet">
    <link href="~/Content/UserContent/vendors/revolution/css/layers.css" rel="stylesheet">
    <link href="~/Content/UserContent/vendors/revolution/css/navigation.css" rel="stylesheet">

    <!-- Extra plugin css -->
    <link href="~/Content/UserContent/vendors/owl-carousel/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/UserContent/vendors/bootstrap-selector/css/bootstrap-select.min.css" rel="stylesheet">
    <link href="~/Content/UserContent/vendors/jquery-ui/jquery-ui.css" rel="stylesheet">

    <link href="~/Content/UserContent/css/style.css" rel="stylesheet">
    <link href="~/Content/UserContent/css/responsive.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="~/Content/UserContent/https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="~/Content/UserContent/https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
