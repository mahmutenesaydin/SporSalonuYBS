@using SporsalonuBYSS.Models
@model List<Sponsor>
@{
    ViewBag.Title = "AddSponsor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Sponsor Ekleme Paneli</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sponsor ID</th>
                        <th>Bayi ID</th>
                        <th>Sponsor Adı</th>
                        <th>Image URL</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (Sponsor s in Model)
                    {
                        <tr>
                            <td>@s.SponsorID</td>
                            <td>@s.DealerID</td>
                            <td>@s.SponsorName</td>
                            <td>@s.ImageUrl</td> 
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<form method="post" action="@Url.Action("AddSponsor","AdminipSponsor")">
    <div class="form-row">

       
        <div class="form-group col-md-6">
            <label for="text">Bayi ID</label>
            <input type="text" class="form-control" placeholder="ID giriniz" name="DealerID" required>
        </div>
        <div class="form-group col-md-6">
            <label for="text">Sponsor Adı</label>
            <input type="text" class="form-control" placeholder="Sponsor adını giriniz" name="SponsorName" required>
        </div>

       
    </div>
    <div class="form-group">
        <label for="inputAddress">Resim Yolu</label>
        <input type="text" class="form-control" id="inputAddress" placeholder="Resmin yolunu giriniz" name="ImageUrl" required>

    </div>
    <button type="submit" class="btn btn-success" value="AddSponsor">Ekle </button>
</form>